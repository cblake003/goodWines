<%- include('../partials/header') %>

<h2>Enter a New Wine</h2>
<form action ="/wines" method="POST">
    <label>Brand:
        <select name="brand">
            <% brands.forEach(function(brand) { %>
                <option value="<%= brand._id %>"><%= brand.name %></option>
           <% }) %>
        </select>
    </label>
    <label>Type:
        <select name="wineType">
        <% wineCreationData.wineType.forEach(function(w) { %>
            <option value="<%= w %>"><%= w %></option>
        <% }) %>
        </select>
    </label>
    <label>Alcohol By Volume:
        <input type="number" name="aBV" min="0" max="2024">
    </label>
    <label>Variety:
        <select name="variety">
        <% wineCreationData.variety.forEach(function(v) { %>
            <option value="<%= v %>"><%= v %></option>
        <% }) %>
        </select>
    </label>
    <label>Year:
        <input type="number" name="year">
    </label>
    <button type="submit">SUBMIT</button>
    <style>
        body {
          background-image: url("/images/PNG-New-Wine-Page.png");
          background-repeat: no-repeat;
          background-attachment: fixed;
          background-size: contain;
          background-position: center bottom;
        }
      </style>
</form>


<p><%= errorMsg %></p>


<%- include('../partials/footer') %>